# Nginx конфигурация для s7robotics.space
# Сохраните как: /etc/nginx/sites-available/s7robotics.space
# Создайте симлинк: sudo ln -s /etc/nginx/sites-available/s7robotics.space /etc/nginx/sites-enabled/
# Проверьте: sudo nginx -t
# Перезагрузите: sudo systemctl reload nginx

server {
    server_name s7robotics.space www.s7robotics.space;
    
    # Логи
    access_log /var/log/nginx/s7robotics-access.log;
    error_log /var/log/nginx/s7robotics-error.log;
    
    # Увеличиваем размер загружаемых файлов
    client_max_body_size 50M;
    
    # Frontend (Next.js на порту 3000)
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Backend API (Express на порту 4000)
    location /api/ {
        proxy_pass http://localhost:4000/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CORS headers (если нужно)
        add_header 'Access-Control-Allow-Origin' '*' always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, DELETE, PATCH, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type' always;
        
        # Preflight
        if ($request_method = 'OPTIONS') {
            return 204;
        }
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Auth endpoints
    location /auth/ {
        proxy_pass http://localhost:4000/auth/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Courses endpoints
    location /courses/ {
        proxy_pass http://localhost:4000/courses/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Clubs endpoints
    location /clubs/ {
        proxy_pass http://localhost:4000/clubs/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Events endpoints
    location /events/ {
        proxy_pass http://localhost:4000/events/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Competitions endpoints
    location /competitions/ {
        proxy_pass http://localhost:4000/competitions/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Uploads (медиа файлы)
    location /uploads/ {
        proxy_pass http://localhost:4000/uploads/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        
        # Кэширование статических файлов
        expires 7d;
        add_header Cache-Control "public, immutable";
    }
    
    # Media (медиа файлы)
    location /media/ {
        proxy_pass http://localhost:4000/media/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        
        # Кэширование статических файлов
        expires 7d;
        add_header Cache-Control "public, immutable";
    }
    
    # Next.js статика (если нужно)
    location /_next/static/ {
        proxy_pass http://localhost:3000/_next/static/;
        expires 365d;
        add_header Cache-Control "public, immutable";
    }

    # SSL (получите сертификат через certbot)
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/s7robotics.space/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/s7robotics.space/privkey.pem;
    
    # Современные SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
}

# Редирект с HTTP на HTTPS
server {
    listen 80;
    server_name s7robotics.space www.s7robotics.space;
    
    # Редирект для Let's Encrypt challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }
    
    location / {
        return 301 https://$host$request_uri;
    }
}
